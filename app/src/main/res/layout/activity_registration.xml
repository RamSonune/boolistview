<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <ImageView
        android:id="@+id/ImageReg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/iconbook">
    </ImageView>

    <TextView
        android:id="@+id/MyLibReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageReg"
        android:layout_centerHorizontal="true"
        android:text="MyLibrary"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/RegReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_below="@+id/MyLibReg"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black">
    </TextView>

    <LinearLayout
        android:id="@+id/ParentLinearReg"
        android:layout_below="@+id/RegReg"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/NameReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:inputType="text" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/userReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Username"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:inputType="text" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/phoneReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Phone number"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:inputType="number" />



        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/emailReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/passReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:inputType="textPassword" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/passConReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm your password"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:inputType="textPassword" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/RegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ParentLinearReg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="ALREADY USER ?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/LoginReg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login">
        </Button>
    </LinearLayout>






</RelativeLayout>